<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-img-top {
      height: 200px; /* Fixed height for uniformity */
      object-fit: cover; /* Maintain aspect ratio without distortion */
    }
    .card {
      height: 100%; /* Ensure cards fill the column evenly */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .card-body {
      flex-grow: 1; /* Ensures consistent card heights */
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Dosttan</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/categories">Categories</a></li>
      </ul>
      <form class="d-flex" action="/search" method="GET">
        <input class="form-control me-2" type="search" name="query" placeholder="Search products..." aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container mt-4">
    <h1 class="mb-4">Search Results</h1>
    <div class="row">
      <% if (products.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-warning" role="alert">
            No products match your search.
          </div>
        </div>
      <% } else { %>
        <% products.forEach(product => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <!-- Product Image -->
              <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.description %>">
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text">Price: $<%= product.price %></p>
                <p class="card-text">City: <%= product.city %></p>
                <p class="card-text">Category: <%= product.category %> / <%= product.category1 %></p>
              </div>
              <!-- View Details Button -->
              <div class="card-footer text-center">
                <a href="/product/<%= product.ad_no %>" class="btn btn-primary w-100">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
    <a href="/" class="btn btn-secondary mt-4">Back to Home</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
